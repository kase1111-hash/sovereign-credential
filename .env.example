# ============================================
# Sovereign Credential - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# Private Keys (KEEP SECURE!)
# ============================================
# Deployer private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# ============================================
# Network RPC URLs
# ============================================
# Ethereum Sepolia Testnet
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key

# Ethereum Mainnet
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key

# NatLangChain (configure when available)
NATLANGCHAIN_RPC_URL=http://localhost:8545
NATLANGCHAIN_CHAIN_ID=1337

# ============================================
# API Keys
# ============================================
# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# CoinMarketCap API key for gas price reports
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# ============================================
# Contract Addresses (populated after deployment)
# ============================================
# IssuerRegistry contract address
ISSUER_REGISTRY_ADDRESS=

# ClaimToken contract address
CLAIM_TOKEN_ADDRESS=

# ZKDisclosureEngine contract address
ZK_DISCLOSURE_ENGINE_ADDRESS=

# CredentialLifecycleManager contract address
LIFECYCLE_MANAGER_ADDRESS=

# FIEBridge contract address
FIE_BRIDGE_ADDRESS=

# ============================================
# External Integrations
# ============================================
# Finite Intent Executor contract address (optional)
FIE_EXECUTION_AGENT_ADDRESS=

# IPFS Gateway URL
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# Pinata API keys for IPFS pinning (optional)
PINATA_API_KEY=
PINATA_SECRET_KEY=

# ============================================
# Development & Testing
# ============================================
# Enable gas reporting in tests
REPORT_GAS=false

# Gas report output file (optional)
GAS_REPORT_FILE=

# Test network fork URL (for mainnet forking)
FORK_URL=

# ============================================
# ZK Circuits
# ============================================
# Path to circuit build directory
CIRCUITS_BUILD_PATH=./circuits/build

# Powers of Tau file path
PTAU_PATH=./circuits/pot12_final.ptau
